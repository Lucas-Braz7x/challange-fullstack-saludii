{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",            // ou "NodeNext" para Node >=16
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["./**/*.ts", "web/requests/recipes.tsx"]
}
